# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git - it contains secrets!

# Azure AI Foundry Project Configuration (NEW - for deployed agents)
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=https://YOUR_AI_FOUNDRY_RESOURCE.services.ai.azure.com/api/projects/YOUR_PROJECT_NAME
AZURE_AI_FOUNDRY_MODEL_DEPLOYMENT_NAME=gpt-4o

# Azure OpenAI Configuration (for direct API access)
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# FLUX Configuration (for image generation)
FLUX_API_KEY=your_flux_api_key_here
FLUX_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/deployments/FLUX.1-Kontext-pro/images/generations?api-version=2025-04-01-preview

# Model Configuration (for backward compatibility with local agents)
MODEL_NAME=gpt-5-chat
DEPLOYMENT_NAME=gpt-5-model
GPT4_DEPLOYMENT_NAME=gpt41-model
GPT5_DEPLOYMENT_NAME=gpt-5-model
DEFAULT_MODEL=gpt5

# API Configuration
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Optional: Azure Computer Vision (for advanced image analysis)
AZURE_COMPUTER_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_computer_vision_key_here
MAX_TOKENS=1000
TEMPERATURE=1.0
TOP_P=1.0

# FLUX Deployment
FLUX_DEPLOYMENT_NAME=FLUX.1-Kontext-pro